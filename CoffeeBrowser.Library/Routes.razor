<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Home).Assembly">
        <Found Context="routeData">
            @*  Now you can change RouteView to AuthorizeRouteView for Authentication View *@
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Components.Layout.MainLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(Components.Layout.MainLayout)">
                <p role="alert"> Sorry, there's nothing at this address.'</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
